# Telemetry Configuration
# Copy this to .env and fill in your actual values
# Source this file: source .env

# ========== REQUIRED ==========

# LibVirt Connection URI
# Examples:
#   - qemu+ssh://user@host/system (remote SSH)
#   - qemu:///system (local)
LIBVIRT_URI="qemu+ssh://oneadmin@192.168.0.104/system"

# InfluxDB v3 Server
INFLUX_URL="http://127.0.0.1:8181"

# InfluxDB Database/Bucket Name
INFLUX_DB="vmstats"

# InfluxDB v3 Bearer Token (from Settings -> Tokens)
# Get token from: InfluxDB UI -> Admin -> API Tokens
INFLUX_TOKEN="apiv3_LNeKzeLNyQqZAFJiVPN96OUVtjeYsdJURAGDXwi3rq5NZCPfpTpbzr0C096s9m9"

# ========== OPTIONAL ==========

# Collection poll interval in seconds
# Default: 1.0 (collect every 1 second)
POLL_INTERVAL="1.0"

# Max lines to batch before flushing to InfluxDB
# Default: 2000
BATCH_MAX_LINES="2000"

# Max seconds before flushing to InfluxDB
# Default: 1.0
BATCH_MAX_SEC="1.0"

# Device cache TTL in seconds (network NICs, disks)
# Default: 300 (5 minutes)
DEVICE_CACHE_TTL="300"

# Libvirt connection timeout in seconds
# Default: 30.0
LIBVIRT_TIMEOUT="30.0"
